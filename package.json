{
    "name": "imrd-footer",
    "description": "Stanrd IMRD project footer React component",
    "homepage": "https://memetic.institute",
    "repository": "github:memetic-institute/footer.git",
    "author": "IMRD <hi@memetic.institute> (https://memetic.institute)",
    "version": "1.0.0",
    "license": "MIT",
    "keywords": [
        "react",
        "footer",
        "styled-components",
        "share",
        "donate",
        "imrd"
    ],
    "main": "dist/index.js",
    "module": "dist/es/index.js",
    "type": "module",
    "scripts": {
        "clean": "rimraf dist/*",
        "build": "npm-run-all clean build:dist",
        "build:dist": "webpack --mode production",
        "prepublish": "npm-run-all build",
        "start": "webpack --watch --mode development",
        "eslint": "eslint",
        "lint": "npm-run-all 'eslint {@} --ignore-path .gitignore .' --",
        "lint:fix": "npm-run-all 'lint --fix {@}' --",
        "lint:report": "npm-run-all 'lint --format html --output-file eslint-report.html {@}' --",
        "lint-staged": "lint-staged"
    },
    "engines": {
        "node": ">= 8"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            "@babel/plugin-proposal-object-rest-spread",
            "@babel/plugin-transform-object-assign",
            "@babel/plugin-transform-react-jsx",
            [
                "styled-components",
                {
                    "ssr": true,
                    "displayName": true,
                    "preprocess": false,
                    "pure": true
                }
            ]
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "prettier",
            "react"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "airbnb",
            "prettier",
            "prettier/babel",
            "prettier/react"
        ],
        "env": {
            "browser": true,
            "es6": true,
            "commonjs": true
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module",
            "allowImportExportEverywhere": false,
            "codeFrame": false
        },
        "rules": {
            "function-paren-newline": [
                "error",
                "consistent"
            ],
            "import/prefer-default-export": 0,
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error",
                        "info"
                    ]
                }
            ],
            "no-multiple-empty-lines": [
                "error",
                {
                    "max": 2,
                    "maxEOF": 1
                }
            ],
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": false
                    }
                },
                {
                    "enforceForRenamedProperties": false
                }
            ],
            "prettier/prettier": "warn",
            "quote-props": [
                "error",
                "consistent"
            ],
            "react/destructuring-assignment": 0,
            "react/jsx-filename-extension": 0,
            "react/jsx-first-prop-new-line": [
                1,
                "multiline"
            ],
            "react/jsx-max-props-per-line": [
                1,
                {
                    "when": "multiline"
                }
            ],
            "react/jsx-props-no-spreading": 0,
            "react/no-find-dom-node": 0,
            "react/react-in-jsx-scope": 0,
            "react/sort-comp": 0,
            "react/no-array-index-key": 0,
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "packageDir": "."
                }
            ]
        },
        "settings": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "none"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "!(.next|out|coverage|node_modules)/**/!(*test).js": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.28",
        "@fortawesome/free-brands-svg-icons": "^5.13.0",
        "@fortawesome/free-solid-svg-icons": "^5.13.0",
        "@fortawesome/react-fontawesome": "^0.1.9",
        "react": "16.13.1",
        "react-dom": "^16.13.1",
        "styled-components": "^5.0.1",
        "webpack": "^4.42.1"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
        "@babel/plugin-transform-object-assign": "^7.8.3",
        "@babel/plugin-transform-react-jsx": "^7.9.4",
        "@babel/preset-env": "^7.9.0",
        "@babel/preset-react": "^7.9.4",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-styled-components": "^1.10.7",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.9",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.2",
        "prop-types": "^15.7.2",
        "webpack-cli": "^3.3.11"
    }
}
